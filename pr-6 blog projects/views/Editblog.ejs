<%- include('Header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .page-wrapper {
            padding: 2rem;
        }
        .page-breadcrumb {
            margin-bottom: 2rem;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: white;
        }
        .card-header {
            background: #343a40;
            color: white;
            padding: 1rem;
            border-bottom: none;
            border-radius: 15px 15px 0 0;
        }
        .card-body {
            padding: 2rem;
        }
        .btn-custom {
            background-color: #343a40;
            border: none;
            color: white;
            padding: 0.75rem 1.25rem;
            border-radius: 5px;
            transition: background-color 0.2s ease;
        }
        .btn-custom:hover {
            background-color: #343a40;
            color: #f8f9fa;
        }
        .form-control:focus {
            border-color: #343a40;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }
        .form-label {
            font-weight: bold;
        }
        .img-preview {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex align-items-center justify-content-between">
                    <h4 class="page-title">UPDATE BLOG</h4>
                    <a href="/admin" class="btn btn-custom">Show Blogs</a>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Update Blog Post</h5>
                        </div>
                        <div class="card-body">
                            <form action="/UpdateBlog" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="editid" value="<%= single.id %>">
                                <div class="mb-3">
                                    <label class="form-label">Title</label>
                                    <input type="text" class="form-control" name="title" value="<%= single.title %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <input type="text" class="form-control" name="description" value="<%= single.description %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Image</label>
                                    <input type="file" class="form-control" name="image">
                                    <div class="img-preview">
                                        <img src="<%= single.image %>" width="100" alt="Current Blog Image">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-custom w-100">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('Footer') %>
