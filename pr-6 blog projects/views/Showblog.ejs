<%- include('Header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Blogs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .page-wrapper {
            padding: 2rem;
        }
        .page-breadcrumb {
            margin-bottom: 2rem;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: white;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        .card-header {
            background: #007bff;
            color: white;
            padding: 1rem;
            border-bottom: none;
        }
        .card-img-top {
            height: 180px;
            object-fit: cover;
        }
        .btn-custom {
            background-color: #343a40;
            border: none;
            color: white;
            padding: 0.75rem 1.25rem;
            border-radius: 5px;
            transition: background-color 0.2s ease;
        }
        .btn-custom:hover {
            background-color: #343a40;
        }
        .btn-outline-custom {
            border-color: #343a40;
            color: #343a40;
            background: transparent;
        }
        .btn-outline-custom:hover {
            background-color: #343a40;
            color: white;
        }
        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
            background: transparent;
        }
        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }
        .comment-footer {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex align-items-center justify-content-between">
                    <h6 class="page-title">YOUR ADDED BLLOG</h6>
                    <a href="/add" class="btn btn-custom">Add Blog</a>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <% blog.map((val) => { %>
                    <div class="col-md-4">
                        <div class="card">
                            <img src="<%= val.image %>" class="card-img-top" alt="Blog Image">
                            <div class="card-body">
                                <h5 class="card-title"><%= val.title %></h5>
                                <p class="card-text"><%= val.description %></p>
                                <div class="comment-footer">
                                    <a href="/editBlog?editId=<%= val.id %>" class="btn btn-outline-custom btn-sm">Edit</a>
                                    <a href="/deleteBlog?deletId=<%= val.id %>" class="btn btn-outline-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('Footer') %>
